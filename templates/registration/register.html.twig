{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}- Inscription
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
<main class="d-flex flex-column justify-content-center align-items-center">
    <h1 class="d-flex h1 text-light justify-content-center my-5">INSCRIPTION</h1>
    <form>   
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <div class="container">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.firstname, {
                label: 'Prénom'
            }) }}
            {{ form_row(registrationForm.lastname, {
                label: 'Nom'
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.agreeTerms, {
                label: 'Accepter les conditions'
            }) }}
                <button type="submit" class="btn mw-80 btn-primary mt-1">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
        <div class="form-group d-flex justify-content-start col-lg-6 mx-auto">
            <a class="btn mw-80 btn-primary mt-1" href="{{ path('app_login') }}">
                Retour à la connexion
            </a>
        </div>
    </form>
</main>
{% endblock %}
